{
  "manifest_version": 3,
  "name": "Taxe.ro Leads Tweaks",
  "version": "1.0.0",
  "description": "Tweaks Taxe Leads Dashboard to make it more usable",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dashboard.taxe.ro/leads*",
        "https://taxe.amdav.ro/leads*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
